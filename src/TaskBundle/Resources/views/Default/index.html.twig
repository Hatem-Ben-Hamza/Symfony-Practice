{% extends 'base.html.twig' %}


{% block body %}

<div class="container">
<table class="table">
<h4 class="panel-title">Tasks List</h4> 
<th>#</th>
<th>Name</th>
<th>Description</th>
<th>Priority</th>
<th>Created Date</th>
<th>Due Date</th>
<th></th>

<tbody>

{% for task in tasks %}

<tr>
<td>{{ task.id }}</td>
<td>{{ task.name }}</td>
<td>{{ task.description }}</td>
<td>{{ task.priority }}</td>
<td>{{ task.createdDate|date('d-m-y') }}</td>
<td>{{ task.dueDate|date('d-m-y') }}</td>
<td>
<a href="/task_delete/{{ task.id }}" class="btn btn-danger">Delete</a>
<a href="#" class="btn btn-warning">Update</a>

{% endfor %}


</tbody>

</div>

{% endblock %}
